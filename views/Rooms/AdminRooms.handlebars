<link rel="stylesheet" href="/CSS/Room.css">
<section id="roomsMain" class="container">
    {{#each rooms}}
    <div class="row" style="margin-bottom: 2rem;">
        <div class="container room col-sm">
            <div class="container-fluid img-container"> 
                <img src="/uploads/{{this.roomPic}}" class="roomPics">
            </div>
                <div>
                    <span>Destination Title</span>
                    <h2> {{this.title}} </h2>
                    <span>Description </span>   
                    <h2>{{this.desc}}  </h2>
                    <h2>Price Per Night <br> ${{this.price}}  </h2>   
                    <h4>Location: {{this.location}} </h4>                     
                    <a type="submit" class="btn btn-success" href="/Rooms/Update/{{this._id}}">Edit Room </a>
                    <form id="delete" method="POST" action="/Rooms/delete/{{this._id}}/?_method=DELETE" style="display: inline-block;">
                            <input type="submit" value="Delete Room" class="btn btn-warning" data-id="{{this._id}}" data-title="{{this.title}}">
                        </form>
                </div>
        </div>
    </div>
    {{/each}}
</section>
